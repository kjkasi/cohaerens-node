extends layout

block content
  div(class="jumbotron")
    div(class="container")
      form(class="",  action="/", method="post")
        div(class="form-group")
          label(for="selectCs") Выбирите систему связи&nbsp
          select(id="selectCs", name="cs")
            each cs in allCs
              option(value=cs.id)= cs.title
          br
          label(for="selectSV") Спокойный/Возбужденный&nbsp
          select(id="selectSV", name="sv")
            option(value=0)= 'Спокойный'
            option(value=1)= 'Возбужденный'
          br
          label(for="selectKp") Выбор Кр&nbsp
          select(id="selectKp", name="kp")
            option(value=0)= '0'
            option(value=1)= '1'
            option(value=2)= '2'
            option(value=3)= '3'
            option(value=4)= '4'
            option(value=5)= '5'
            option(value=6)= '6'
            option(value=7)= '7'
            option(value=8)= '8'
            option(value=9)= '9'
          br
          label(for="selectСount") Кол-во вспышек&nbsp
          select(id="selectСount", name="count")
            option(value=0)= '0'
            option(value=1)= '1'
            option(value=2)= '2'
            option(value=3)= '3'
          br
          label(for="selectPower") Сила вспышек&nbsp
          select(id="selectPower", name="power")
            option(value=0)= 'A'
            option(value=1)= 'B'
            option(value=2)= 'C'
            option(value=3)= 'M'
            option(value=4)= 'X'
          br
          label(for="selectPlace") Выбор место&nbsp
          select(id="selectPlace", name="place")
            each place in allPlaces
              option(value=place.id)= place.title

        button(class="btn btn-success", type="submit") Поехали

        if info 
          br
          br
          div(class="alert alert-danger", role="alert")
            p= info.result


block link
  -var nav_active='Главная';