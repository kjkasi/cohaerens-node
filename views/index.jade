extends layout

block content
  div(class="jumbotron")
    div(class="container")
      form(class="",  action="/", method="post")
        div(class="form-group")
          label(for="selectCs") Выбырите систему связи&nbsp
          select(id="selectCs", name="cs")
            each cs in allCs
              option(value=cs.id)= cs.title
          br
          label(for="selectSV") Спокойный/Возбежденный&nbsp
          select(id="selectSV", name="sv")
            option(value=0)= 'Спокойный'
            option(value=1)= 'Возбужденный'
          br
          label(for="selectKp") Выбор Кр&nbsp
          select(id="selectKp", name="kp")
            option(value=0)= '0'
            option(value=1)= '1'
            option(value=2)= '2'
            option(value=3)= '3'
            option(value=4)= '4'
            option(value=5)= '5'
            option(value=6)= '6'
            option(value=7)= '7'
            option(value=8)= '8'
            option(value=9)= '9'
          br
          label(for="selectСount") Кол-во вспышек&nbsp
          select(id="selectСount", name="count")
            option(value=0)= '0'
            option(value=1)= '1'
            option(value=2)= '2'
            option(value=3)= '3'
          br
          label(for="selectPower") Сила вспышек&nbsp
          select(id="selectPower", name="power")
            option(value=A)= 'A'
            option(value=B)= 'B'
            option(value=C)= 'C'
            option(value=M)= 'M'
            option(value=X)= 'X'
          br
          label(for="selectCity") Выбор города&nbsp
          select(id="selectCity", name="city")
            each city in allCity
              option(value=city.id)= city.title

        button(class="btn btn-success", type="submit") Поехали

      


block link
  -var nav_active='Главная';