extends layout

block content
  div(class="jumbotron")
    div(class="container")
      form(class="form-inline",  action="/", method="post")
        div(class="form-group")
          select(id="selectCs", name="cs", class="form-control")
            each cs in allCs
              option(value=cs.id)= cs.title
          label(for="selectCs", class="sr-only") Выбырите систему связи
        button(class="btn btn-success", type="submit") Поехали

      


block link
